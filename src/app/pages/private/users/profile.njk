{% extends '../layout.njk' %}
{% import './fields.njk' as profile %}

{% block subTitle %}
  <title>Perfil |
    {{ user.firstName }}</title>
{% endblock subTitle %}

{% block content %}

  <form 
    class="admin-container" 
    method="POST" 
    action="/admin/profile?_method=PUT"
  >
    <input 
      type="hidden" 
      name="id" 
      value="{{ user.id }}"
    >
    {{ profile.fields('Bem vindo(a)', user, false, false, false) }}
  </form>

{% endblock content %}