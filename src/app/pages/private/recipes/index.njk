{% extends '../layout.njk' %}

{% import '../../components/areaSearch.njk' as search %}

{% block subTitle %}
  <title>PÃ¡gina de Receitas</title>
{% endblock subTitle %}

{% block filter %}
  {{ search.area('/admin/recipes', 'Buscar pelo nome') }}
{% endblock filter %}

{% block content %}

  <section class="admin-container">
    <div class="header-section">
      <h1>Gerenciar receitas</h1>

      <a href="/admin/recipes/create">
        <button>Adicionar</button>
      </a>
    </div>

    <div class="card-recipes-container">

      {% for recipe in recipes %}
        <div class="card-recipe">
          <img src="{{ recipe.image }}" alt="{{ recipe.title }}"/>

          <div class="card-recipe-content">
            <strong>{{ recipe.title }}</strong>
            <span>por
              {{ recipe.chef_name }}</span>

            <button>
              <a href="/admin/recipes/show/{{ recipe.id }}">Visualizar</a>
            </button>
          </div>
        </div>
      {% endfor %}

    </div>
  </section>

{% endblock content %}