{% extends '../layout.njk' %}

{% import './fields.njk' as chefContainer %}
{% import '../../components/confirmModalDelete.njk' as delete %}

{% block subTitle %}
  <title>Página de Edição</title>
{% endblock subTitle %}

{% block content %}

  <form class="admin-container" method="POST" action="/admin/chefs?_method=PUT" enctype="multipart/form-data">
    <input type="hidden" name="id" value="{{ chef.id }}"/>

    {{ chefContainer.fields('Editando chef', chef, true, false) }}
  </form>

  {{ delete.modal('/admin/chefs', chef) }}

{% endblock content %}