{% extends './layout.njk' %}
{% import '../components/inputContainer.njk' as field %}

{% block subTitle %}
  <title>Página de Login</title>
{% endblock subTitle %}

{% block content %}

  <header id="header-session">
    <img src="/img/system/logo_black.png" alt="/Foodfy"/>
  </header>

  <section class="session-container">
    <h1>Iniciar Sessão</h1>

    <form 
      id="login-form" 
      method="POST" 
      action="/session/login"
    >
      <div class="field-container">
        <label for="email">Email</label>

        {{ field.input('email', 'email', '', 'Digite seu email') }}
      </div>

      <div class="field-container">
        <label for="password">Senha</label>

        {{ field.input('password', 'password', '', 'Digite sua senha') }}
      </div>

      <div class="login-buttons">
        <a href="/session/forgot-password">Perdeu a senha?</a>
        <button type="submit">Acessar</button>
      </div>
    </form>
  </section>

{% endblock content %}