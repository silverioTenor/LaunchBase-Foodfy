{% extends './layout.njk' %}
{% import '../components/inputContainer.njk' as field %}

{% block subTitle %}
  <title>Página de Recuperação de Senha</title>
{% endblock subTitle %}

{% block content %}

  <header id="header-session">
    <img src="/img/system/logo_black.png" alt="/Foodfy"/>
  </header>

  <section class="session-container">
    <h1>Esqueceu a Senha?</h1>

    <form id="reset-form" method="POST" action="?">
      <div class="field-container">
        <label for="email">Email</label>

        {{ field.input('email', 'email', 'Digite o email cadastrado') }}
      </div>

      <div class="field-container">
        <label for="email">Nova senha</label>

        {{ field.input('password', 'password', 'Digite sua nova senha') }}
      </div>

      <div class="field-container">
        <label for="email">Repetir senha</label>

        {{ field.input('password', 'repeatPassword', 'Repetir a nova senha') }}
      </div>

      <div class="login-buttons">
        <button type="submit">Nova senha</button>
      </div>
    </form>
  </section>

{% endblock content %}