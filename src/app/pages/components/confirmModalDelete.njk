{% macro modal(route, user) %}

  <section class="remove-modal-container">
    <div class="remove-modal">
      <h2>Esta operação não pode ser desfeita.
        <br/>
        Deseja continuar?</h2>

      <div class="actions-buttons">
        <form action="{{ route }}?_method=DELETE">
          <input type="hidden" name="id" value="{{ user.id }}"/>
          <button class="remove-now" type="submit">Sim</button>
        </form>

        <button class="remove-canceled" onclick="ModalDelete.dismiss()">Cancelar</button>
      </div>
    </div>
  </section>

{% endmacro %}