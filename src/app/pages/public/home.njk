{% extends './layout.njk' %}
{% import '../components/areaSearch.njk' as search %}

{% block subTitle %}
  <title>Foodfy | Home</title>
{% endblock subTitle %}

{% block filter %}
  {{ search.area('/recipes', filter, 'Buscar uma receita') }}
{% endblock filter %}

{% block content %}

  <section id="banner">
    <div class="banner-content">
      <h1>As melhores receitas</h1>

      <p>Aprenda a construir os melhores pratos com receitas criadas por profissionais do mundo inteiro.</p>
    </div>

    <a href="/">
      <img src="/img/system/chef.png" alt="chef-foodfy"/>
    </a>
  </section>

  <section class="recipes-container">
    <h2>Mais acessadas</h2>

    <div class="recipes">

      {% for recipe in recipes %}
        <div id="{{ recipe.id }}" class="recipe">
          <img src="{{ recipe.image }}" alt="{{ recipe.title }}"/>

          <strong>{{ recipe.title }}</strong>
          <span>por {{ recipe.chef_name }}</span>
        </div>
      {% endfor %}

    </div>
  </section>

{% endblock content %}